const slidesContainer = document.getElementById("slides-container");
const swipe_señal = document.getElementById("swipe_señal");
const slide = document.querySelector(".slide");
const prevButton = document.getElementById("slide-arrow-prev");
const nextButton = document.getElementById("slide-arrow-next");
let scrollWidth = slidesContainer.scrollWidth - slidesContainer.clientWidth;

const hideSwipers =  () => {
  if(window.innerWidth <= 768){
    prevButton.style.display = 'none';
    nextButton.style.display = 'none'; 
  }
  else{    
    prevButton.style.display = slidesContainer.scrollLeft == 0 ? "none" : "block";
    nextButton.style.display = slidesContainer.scrollLeft == scrollWidth ? "none" : "block";
  }
}

function hideSignalSwipe() {
  swipe_señal.classList.remove('block');
  swipe_señal.classList.add('hidden');
  swipe_señal.removeEventListener("click", hideSignalSwipe);
}
swipe_señal.addEventListener("click", hideSignalSwipe);

let slideWidth = slide.clientWidth;
nextButton.addEventListener("click", () => {
  slidesContainer.scrollLeft += slideWidth;
  setTimeout(()=> hideSwipers(), 700); 
});
prevButton.addEventListener("click", () => {
  slidesContainer.scrollLeft -= slideWidth
  setTimeout(()=> hideSwipers(), 700); 
});

let isDragStart = false, prevPageX, prevScrollLeft;
const handleOnDown = (e) =>{
  slidesContainer.classList.add('dragging');
  isDragStart = true;
  document.addEventListener('mouseup', handleOnUp); 
  if(!isDragStart) return; 
  prevPageX = (e.pageX || e.touches[0].pageX);
  prevScrollLeft = slidesContainer.scrollLeft;
}
const handleOnMove = (e) => {
  if (!isDragStart) return;
  e.preventDefault();
  let positionDiff = (e.pageX || e.touches[0].pageX) - prevPageX;
  slidesContainer.scrollLeft = prevScrollLeft - positionDiff; 
  hideSwipers();
};
