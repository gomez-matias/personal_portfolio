      class="caja_botones_hero w-full flex sm:gap-10 sm:justify-center justify-between relative z-20 [&>a]:px-6 [&>a]:py-4 [&>a]:sm:px-8 [&>a]:sm:py-5 [&>a]:md:px-12 [&>a]:md:py-5 [&>a]:lg:px-14 [&>a]:lg:py-6 [&>a]:xl:px-16 [&>a]:xl:py-7"
    >
      <a
        id="mis_proyectos"
        href="#proyectos"
        class="link_interno btn-16 inline-block relative dark:after:bg-dark after:bg-light dark:hover:text-light hover:text-dark dark:bg-light bg-dark text-light dark:text-dark shadow-lg md:text-xl sm:text-lg text-base gap-1 items-center w-fit leading-loose"
